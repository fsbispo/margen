// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String @unique
  password String
  type     Int
}

model Record {
  id          String   @id @default(uuid())
  company     String
  name        String
  observation String
  type        Int
  status      Int 
  clinic      Int 
  entryAt     DateTime 
  confirmedAt DateTime?
  permanence  Int?
}
